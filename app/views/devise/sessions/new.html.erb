    <div class="logo-top"></div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class="input_table">
        <tr>
          <td class="label_name" align="right"><%= f.label :メールアドレス： %></td>
          <td class="input_field"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td class="label_name" align="right"><%= f.label :パスワード： %></td>
          <td class="input_field"><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
      </table>
          <div class="submit_btn">
            <%= f.submit "ログイン" %>
          </div>
    <% end %>
      <p class="forget_pass">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "パスワードをお忘れの方はこちら", new_password_path(resource_name) %><br />
        <% end -%>
      </p>
    </div>
    <div class="item_block">
      <div class="submit_btn">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "新規登録", new_registration_path(resource_name) %><br />
        <% end -%>
      </div>

    <%= render "devise/shared/links" %>

