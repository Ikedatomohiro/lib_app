<div class="page_wrapper">
    <div class="home_header">
        <div class="user_icon">
            <%= image_tag(@user.image, alt:'ユーザーアイコン') %>
        </div>
        <div class="user_name">
            <p>ユーザー名：<%= @user.name %></p>
            <p><%= link_to "@#{@user.nickname}","https://twitter.com/#{@user.nickname}", target: '_blank' %></p>
        </div>
        <% if @user.id === current_user.id %>
        <button>
            <%= link_to '編集', edit_user_path, class:'button' %>
        </button>
        <% end %>
        <% if current_user %>
            <%#= link_to '読書履歴', readinghistory_path %>
        <% end %>
    </div>
    <div>
        <p>
            自己紹介
            <%= @user.self_introduction %>
            
        </p>
    </div>
    <p>●最近読んだ本</p>
    <div class="recent_reading_book">
        <div class="book_img_box">
            <%= link_to(image_tag('book_img.svg', class:'book_img'), book_path) %>
            <div class="book_title">
                <%= link_to '本のタイトル', books_path %>
            </div>
        </div>
        <p class="impression">
            <%= link_to('感想の一部いいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいいい') %>
        </p>
    </div>
</div>
