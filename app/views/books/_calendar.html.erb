<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1/i18n/jquery.ui.datepicker-ja.min.js"></script>

<%= form_with model: @book, url: books_set_reading_date_path do |f| %>
    <input type="hidden" id="authenticity_token_datepicker" name="authenticity_token" value="<%= form_authenticity_token %>" >
    <input class="datepicker input_area" type="text" value="" name="<%= params[:calendar] %>" />
    <%= f.hidden_field :id, value: @book.id%>
<% end %>
<script>
// カレンダー表示設定
$('.datepicker').datepicker({
    //オプション
    dateFormat: 'yy/mm/dd',
    todayHighlight : false,
    autoclose : true,
    keyboardNavigation : false,
    changeMonth: true,
    duration: 300,
    showAnim: 'show'
});

// 日にちを変更されたときに自動更新する。
$('.datepicker').change(function() {
    var val = $(this).val();
    $.post({
        url: "<%= books_set_reading_date_path %>",
        data: {
         <%= params[:calendar] %>: val,
                               id: <%= @book.id %>,
               authenticity_token: $("#authenticity_token_datepicker").val()
              }
    });
});
</script>